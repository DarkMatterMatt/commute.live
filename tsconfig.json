{
    "compilerOptions": {
        "target": "ES2021",
        "module": "ES2020",
        "lib": ["ES2021"],
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,

        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"]
        },
        "typeRoots": [
            "node_modules/@types"
        ]
    }
}
